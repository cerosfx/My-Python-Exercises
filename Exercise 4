print()
print('----------------------------------')

#SUBTRACT MODULE

print('Lets subtract the same numbers =) ')
print('Subtract of ', num1 - num2)
print()
print('----------------------------------')

#MULTIPLY MODULE

print('Lets multiply the numbers now ', num1 * num2)
print()
print('----------------------------------')

#DIVIDE MODULE

print('lets divide the numbers now ', num1 // num2 )
print()
print('----------------------------------')

#MOD MODULE

mod_num1 = num1 % num2
print('the reminder is ', mod_num1)
print()
print('----------------------------------')

#BOOLEAN OPERATION

print(condition)
condition =not condition
print('has changed to ',condition)
print()
print('----------------------------------')

#SQUARE OPERATION

square_num = num1**2
