print(' is ', square_num)
print()
print('----------------------------------')

print('100 added to ', num1)
print('is ')
num1 += 100
print(num1)
print()
print('----------------------------------')
#CONDITIONAL

cond = num1 <= num2
print(cond)
cond = num1 >= num2
print(cond)
cond = num1 == num2
print(cond)
print()
print('----------------------------------')
